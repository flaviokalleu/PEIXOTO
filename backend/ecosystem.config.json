{
  "apps": [
    {
      "name": "peixoto-backend",
      "script": "./dist/server.js",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "2G",
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log",
      "log_file": "./logs/combined.log",
      "time": true,
      "restart_delay": 4000,
      "max_restarts": 10,
      "min_uptime": "30s",
      "kill_timeout": 5000,
      "wait_ready": true,
      "listen_timeout": 10000,
      "autorestart": true,
      "ignore_watch": [
        "node_modules",
        "logs",
        "public"
      ],
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z"
    }
  ]
}
