    "start_url": "/",
    "scope": "/",
    "display": "standalone",
    "orientation": "any",
    "theme_color": "#38BDF8",
    "background_color": "#0F172A",
    "prefer_related_applications": false,
    "categories": [
        "business",
        "productivity",
        "communication",
        "utilities"
    ],
    "description": "MetaBot - Plataforma Profissional de Atendimento Multicanal",
    "screenshots": [
        {
            "src": "/screenshots/dashboard-desktop.png",
            "sizes": "1920x1080",
            "type": "image/png",
            "platform": "wide",
            "label": "Dashboard View"
        },
        {
            "src": "/screenshots/chat-mobile.png",
            "sizes": "750x1334",
            "type": "image/png",
            "platform": "narrow",
            "label": "Chat Interface"
        }
    ],
    "shortcuts": [
        {
            "name": "Iniciar Atendimento",
            "short_name": "Atendimento",
            "description": "Acessar interface de atendimento",
            "url": "/tickets",
            "icons": [{ "src": "/icons/chat.png", "sizes": "96x96" }]
        },
        {
            "name": "Dashboard",
            "short_name": "Dashboard",
            "description": "Visualizar estatísticas",
            "url": "/dashboard",
            "icons": [{ "src": "/icons/dashboard.png", "sizes": "96x96" }]
        },
        {
            "name": "Configurações",
            "short_name": "Config",
            "description": "Acessar configurações",
            "url": "/settings",
            "icons": [{ "src": "/icons/settings.png", "sizes": "96x96" }]
        }
    ],
    "related_applications": [],
    "protocol_handlers": [
        {
            "protocol": "web+chat",
            "url": "/chat?id=%s"
        }
    ],
    "edge_side_panel": {
        "preferred_width": 400
    },
    "display_override": [
        "window-controls-overlay",
        "standalone",
        "browser"
    ],
    "handle_links": "preferred",
    "launch_handler": {
        "client_mode": ["focus-existing", "auto"]
    },
    "file_handlers": [
        {
            "action": "/upload",
            "accept": {
                "application/json": [".json"],
                "text/csv": [".csv"]
            }
        }
    ]
}